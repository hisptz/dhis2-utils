{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./build/types",
    "types": [
      "cypress",
      "node"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "jsx": "react",
    "typeRoots": [
      "node_modules/@types",
    ]
  },
  "include": [
    "src/**/*",
    "../../types"
  ],
  "exclude": [
    "node_modules",
    "../../node_modules",
    "src/locales/*/**.js",
  ]
}
