{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./build/types",
    "types": [
      "cypress",
      "node"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "jsx": "react",
    "checkJs": false
  },
  "include": [
    "src/**/*",
    "../../types"
  ],
  "exclude": [
    "node_modules",
    "../../node_modules",
    "src/dataProviders",
    "src/locales/*/**.js",
    "src/*/**.js",
    "**/*.test.tsx",
    "**/*.stories.tsx",
    "**/*.config.ts"
  ]
}
