{
  "name": "dhis2-utils",
  "version": "1.0.0",
  "repository": "git@github.com:hisptz/dhis2-utils.git",
  "author": "HISP Tanzania",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "nohoist": [
      "**/@storybook/**",
      "**/storybook",
      "react",
      "react-dom"
    ],
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "lib": "yarn workspace @hisptz/dhis2-utils",
    "ui": "yarn workspace @hisptz/dhis2-ui",
    "analytics": "yarn workspace @hisptz/dhis2-analytics",
    "test:lib": "yarn lib test",
    "test:ui": "npx cypress run --component",
    "test:ui:open": "npx cypress open --component",
    "sb": "yarn workspace @hisptz/storybook",
    "docs": "yarn workspace docs",
    "build:lib": "yarn lib build",
    "build:ui": "yarn ui build",
    "build:analytics": "yarn analytics build",
    "prebuild:docs": "yarn sb build -o ../docs/static/ui",
    "build:docs": "yarn docs build",
    "build:sb": "npx lerna run build --scope @hisptz/storybook",
    "start:docs": "yarn docs start",
    "start:sb": "yarn sb start",
    "test": "yarn test:lib && yarn test:ui",
    "build": "npx lerna run build --no-private",
    "prepublish": "npx lerna run build --no-private",
    "publish": "npx lerna publish --no-private",
    "deploy:docs": "yarn docs deploy"
  },
  "devDependencies": {
    "cypress": "^12.7.0",
    "lerna": "^6.4.1",
    "vite": "^4.1.4"
  }
}
